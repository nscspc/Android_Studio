<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sem3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:text="Advanced Engineering Mathematics"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#DC0BB6CC" />

        <Button
            android:id="@+id/button2"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:text="Data Structures and Algorithms"
            android:textAllCaps="false"
            app:backgroundTint="#A350D1E1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:text="Software Engineering"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#DC0BB6CC" />

        <Button
            android:id="@+id/button4"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:text="Digital Electronics"
            android:textAllCaps="false"
            app:backgroundTint="#A350D1E1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Technical Communication"
            app:backgroundTint="#DC0BB6CC" />

        <Button
            android:id="@+id/button10"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Managerial Economics and Financial Accounting"
            app:backgroundTint="#A350D1E1" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sem1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/pps"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:gravity="center_vertical"
            android:text="Programming for Problem Solving"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#DC0BB6CC" />

        <Button
            android:id="@+id/hv"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:text="Human Values"
            android:textAllCaps="false"
            app:backgroundTint="#A350D1E1" />

        <Button
            android:id="@+id/ep"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:text="Engineering Physics"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#DC0BB6CC" />

        <Button
            android:id="@+id/bee"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:text="Basic Electrical Engineering"
            android:textAllCaps="false"
            app:backgroundTint="#A350D1E1" />

        <Button
            android:id="@+id/em1"
            android:layout_width="345dp"
            android:layout_height="62dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Engineering Mathematics-1"
            app:backgroundTint="#DC0BB6CC" />
    </LinearLayout>
</LinearLayout>